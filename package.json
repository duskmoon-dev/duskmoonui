{
  "name": "duskmoonui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "dev": "bun run --filter @duskmoon-dev/docs dev",
    "dev:core": "bun run --filter @duskmoon-dev/core dev",
    "build": "bun run build:core && bun run build:docs",
    "build:core": "bun run --filter @duskmoon-dev/core build",
    "build:docs": "bun run --filter @duskmoon-dev/docs build",
    "preview": "bun run --filter @duskmoon-dev/docs preview",
    "typecheck": "bun run --filter @duskmoon-dev/core typecheck && bun run --filter @duskmoon-dev/docs astro check"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.6.0"
  }
}
