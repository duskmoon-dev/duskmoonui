---
import Layout from '../layouts/Layout.astro';
---

<Layout title="DuskMoonUI Astro Starter">
  <main class="min-h-screen bg-surface p-8">
    <div class="max-w-6xl mx-auto space-y-12">
      <!-- Header -->
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-4xl font-bold text-on-surface">
            DuskMoonUI + Astro
          </h1>
          <p class="text-on-surface-variant mt-2">
            A starter template showcasing all components
          </p>
        </div>
        <button id="theme-toggle" class="btn btn-tonal">
          <span id="theme-icon">üåô</span>
          <span id="theme-label">Moonlight</span>
        </button>
      </div>

      <!-- Buttons Section -->
      <section class="space-y-4">
        <h2 class="text-2xl font-semibold text-on-surface">Buttons</h2>
        <div class="flex flex-wrap gap-3">
          <button class="btn btn-primary">Primary</button>
          <button class="btn btn-secondary">Secondary</button>
          <button class="btn btn-tertiary">Tertiary</button>
          <button class="btn btn-outlined">Outlined</button>
          <button class="btn btn-text">Text</button>
          <button class="btn btn-tonal">Tonal</button>
          <button class="btn btn-success">Success</button>
          <button class="btn btn-error">Error</button>
        </div>
      </section>

      <!-- Cards Section -->
      <section class="space-y-4">
        <h2 class="text-2xl font-semibold text-on-surface">Cards</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="card">
            <div class="card-body">
              <h3 class="card-title">Default Card</h3>
              <p class="card-subtitle">This is a default surface container card</p>
            </div>
          </div>

          <div class="card card-high">
            <div class="card-body">
              <h3 class="card-title">Elevated Card</h3>
              <p class="card-subtitle">High elevation with shadow</p>
            </div>
            <div class="card-actions">
              <button class="btn btn-text">Action</button>
            </div>
          </div>

          <div class="card card-outlined">
            <div class="card-body">
              <h3 class="card-title">Outlined Card</h3>
              <p class="card-subtitle">With border outline</p>
            </div>
          </div>
        </div>
      </section>

      <!-- Inputs Section -->
      <section class="space-y-4">
        <h2 class="text-2xl font-semibold text-on-surface">Form Inputs</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="input-group">
            <label class="input-label">Filled Input</label>
            <input
              type="text"
              class="input"
              placeholder="Enter text..."
            />
            <span class="input-helper">Helper text goes here</span>
          </div>

          <div class="input-group">
            <label class="input-label">Outlined Input</label>
            <input
              type="text"
              class="input input-outlined"
              placeholder="Enter text..."
            />
          </div>

          <div class="input-group">
            <label class="input-label">Select</label>
            <select class="select">
              <option>Option 1</option>
              <option>Option 2</option>
              <option>Option 3</option>
            </select>
          </div>

          <div class="input-group">
            <label class="input-label">Textarea</label>
            <textarea
              class="textarea"
              placeholder="Enter your message..."
            ></textarea>
          </div>
        </div>
      </section>

      <!-- Badges Section -->
      <section class="space-y-4">
        <h2 class="text-2xl font-semibold text-on-surface">Badges</h2>
        <div class="flex flex-wrap gap-3 items-center">
          <span class="badge badge-primary">Primary</span>
          <span class="badge badge-secondary">Secondary</span>
          <span class="badge badge-tertiary">Tertiary</span>
          <span class="badge badge-success">Success</span>
          <span class="badge badge-error">Error</span>
          <span class="badge badge-warning">Warning</span>
          <span class="badge badge-info">Info</span>
          <span class="badge badge-tonal">Tonal</span>
          <span class="badge badge-outlined">Outlined</span>
        </div>
      </section>

      <!-- Alerts Section -->
      <section class="space-y-4">
        <h2 class="text-2xl font-semibold text-on-surface">Alerts</h2>
        <div class="space-y-3">
          <div class="alert alert-info">
            <div class="alert-content">
              <div class="alert-title">Info Alert</div>
              <div class="alert-description">
                This is an informational message
              </div>
            </div>
          </div>

          <div class="alert alert-success">
            <div class="alert-content">
              <div class="alert-title">Success Alert</div>
              <div class="alert-description">
                Operation completed successfully!
              </div>
            </div>
          </div>

          <div class="alert alert-warning">
            <div class="alert-content">
              <div class="alert-title">Warning Alert</div>
              <div class="alert-description">
                Please review this warning message
              </div>
            </div>
          </div>

          <div class="alert alert-error">
            <div class="alert-content">
              <div class="alert-title">Error Alert</div>
              <div class="alert-description">
                An error occurred. Please try again
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
  </main>
</Layout>

<script>
  // Theme toggle functionality
  const toggle = document.getElementById('theme-toggle');
  const icon = document.getElementById('theme-icon');
  const label = document.getElementById('theme-label');
  let currentTheme = 'sunshine';

  toggle?.addEventListener('click', () => {
    currentTheme = currentTheme === 'sunshine' ? 'moonlight' : 'sunshine';
    document.documentElement.setAttribute('data-theme', currentTheme);

    if (currentTheme === 'sunshine') {
      icon!.textContent = 'üåô';
      label!.textContent = 'Moonlight';
    } else {
      icon!.textContent = '‚òÄÔ∏è';
      label!.textContent = 'Sunshine';
    }

    localStorage.setItem('theme', currentTheme);
  });

  // Restore saved theme on load
  const savedTheme = localStorage.getItem('theme');
  if (savedTheme) {
    currentTheme = savedTheme;
    document.documentElement.setAttribute('data-theme', savedTheme);
    if (savedTheme === 'sunshine') {
      icon!.textContent = 'üåô';
      label!.textContent = 'Moonlight';
    } else {
      icon!.textContent = '‚òÄÔ∏è';
      label!.textContent = 'Sunshine';
    }
  }
</script>
