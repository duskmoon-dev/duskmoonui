---
import BaseLayout from './BaseLayout.astro';
import { ThemeToggle } from '../components/ui/ThemeToggle';

export interface Props {
  title: string;
  description?: string;
  locale?: string;
}

const { title, description, locale } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<BaseLayout title={title} description={description} locale={locale}>
  <div class="docs-layout">
    <header class="docs-header">
      <div class="container">
        <nav class="header-nav">
          <a href={base} class="logo">
            <span class="logo-text">@duskmoon-dev/core</span>
          </a>
          <div class="nav-links">
            <a href={`${base}docs/en/getting-started/installation/`}>Docs</a>
            <a href={`${base}components/`}>Components</a>
            <a href={`${base}docs/en/theming/themes/`}>Themes</a>
            <a href="https://github.com/duskmoon-dev/duskmoonui" target="_blank">GitHub</a>
            <ThemeToggle client:load />
          </div>
        </nav>
      </div>
    </header>

    <main class="docs-main">
      <div class="container">
        <slot />
      </div>
    </main>

    <footer class="docs-footer">
      <div class="container">
        <p>&copy; {new Date().getFullYear()} @duskmoon-dev/core. MIT License.</p>
      </div>
    </footer>
  </div>
</BaseLayout>

