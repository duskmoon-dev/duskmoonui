---
interface NavItem {
  title: string;
  href?: string;
  items?: NavItem[];
  badge?: string;
}

interface Props {
  currentPath?: string;
}

const { currentPath = '' } = Astro.props;
const base = import.meta.env.BASE_URL;

const navigation: NavItem[] = [
  {
    title: 'Getting Started',
    items: [
      { title: 'Installation', href: `${base}docs/en/getting-started/installation/` },
      { title: 'Quick Start', href: `${base}docs/en/getting-started/quick-start/` },
      { title: 'Configuration', href: `${base}docs/en/getting-started/configuration/` },
    ],
  },
  {
    title: 'Components',
    items: [
      { title: 'Overview', href: `${base}components/` },
      { title: 'Button', href: `${base}components/button/`, badge: 'showcase' },
      { title: 'Card', href: `${base}components/card/`, badge: 'showcase' },
      { title: 'Input', href: `${base}docs/en/components/input/` },
      { title: 'Badge', href: `${base}docs/en/components/badge/` },
      { title: 'Alert', href: `${base}docs/en/components/alert/` },
    ],
  },
  {
    title: 'Theming',
    items: [
      { title: 'Overview', href: `${base}docs/en/theming/overview/` },
      { title: 'Customization', href: `${base}docs/en/theming/customization/` },
    ],
  },
  {
    title: 'API Reference',
    items: [
      { title: 'Plugin Options', href: `${base}docs/en/api/plugin-options/` },
      { title: 'Theme Tokens', href: `${base}docs/en/api/theme-tokens/` },
    ],
  },
  {
    title: 'Guides',
    items: [
      { title: 'Next.js', href: `${base}docs/en/guides/nextjs/` },
      { title: 'Astro', href: `${base}docs/en/guides/astro/` },
      { title: 'Vue', href: `${base}docs/en/guides/vue/` },
      { title: 'React', href: `${base}docs/en/guides/react/` },
    ],
  },
];

function isActive(href: string, current: string): boolean {
  return current.includes(href) || current === href;
}
---

<aside class="sidebar">
  <div class="sidebar-header">
    <a href={base} class="sidebar-logo">
      <span class="logo-text">@duskmoon-dev/core</span>
      <span class="logo-version">v0.1.0</span>
    </a>
  </div>

  <nav class="sidebar-nav">
    {navigation.map(section => (
      <div class="nav-section">
        <h3 class="nav-section-title">{section.title}</h3>
        {section.items && (
          <ul class="nav-list">
            {section.items.map(item => (
              <li class="nav-item">
                <a
                  href={item.href}
                  class:list={[
                    'nav-link',
                    { active: item.href && isActive(item.href, currentPath) }
                  ]}
                >
                  {item.title}
                  {item.badge && (
                    <span class="nav-badge">{item.badge}</span>
                  )}
                </a>
              </li>
            ))}
          </ul>
        )}
      </div>
    ))}
  </nav>

  <div class="sidebar-footer">
    <div class="sidebar-links">
      <a href="https://github.com/duskmoon-dev/duskmoonui" target="_blank" rel="noopener" class="sidebar-link">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
