---
import { getCollection } from 'astro:content';
import DocsLayout from '../../layouts/DocsLayout.astro';

export async function getStaticPaths() {
  const docs = await getCollection('docs', ({ data }) => data.published !== false);

  return docs.map(entry => ({
    params: {
      slug: entry.slug,
    },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<DocsLayout
  title={entry.data.title}
  description={entry.data.description}
>
  <article class="max-w-4xl mx-auto">
    <header class="mb-12">
      <h1 class="mt-0 text-5xl font-bold">{entry.data.title}</h1>
      {entry.data.description && (
        <p class="text-xl text-on-surface-variant mb-0">{entry.data.description}</p>
      )}
    </header>

    <div class="prose prose-lg">
      <Content />
    </div>

    {entry.data.lastUpdated && (
      <footer class="mt-16 pt-8 border-t border-outline-variant">
        <p class="text-sm text-on-surface-variant">
          Last updated: {new Intl.DateTimeFormat('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          }).format(entry.data.lastUpdated)}
        </p>
      </footer>
    )}
  </article>
</DocsLayout>
