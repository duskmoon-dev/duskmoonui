---
import DocsLayout from '../../layouts/DocsLayout.astro';
import ComponentShowcase from '../../components/showcase/ComponentShowcase.astro';

const base = import.meta.env.BASE_URL;
---

<DocsLayout
  title="Button Component"
  description="Interactive showcase of DuskMoonUI button variants"
>
  <div class="showcase-page">
    <header class="page-header">
      <h1>Button Component</h1>
      <p class="page-description">
        Explore all button variants with live examples. Click on any example to interact with it.
      </p>
    </header>

    <section class="showcase-section">
      <h2>Basic Buttons</h2>
      <ComponentShowcase
        title="Filled Buttons"
        description="Primary, secondary, and tertiary filled buttons for main actions"
        code={`<button class="btn btn-primary">Primary</button>
<button class="btn btn-secondary">Secondary</button>
<button class="btn btn-tertiary">Tertiary</button>`}
      />

      <ComponentShowcase
        title="Outlined Buttons"
        description="Medium-emphasis buttons for secondary actions"
        code={`<button class="btn btn-outlined">Outlined</button>
<button class="btn btn-outlined btn-primary">Outlined Primary</button>
<button class="btn btn-outlined btn-secondary">Outlined Secondary</button>`}
      />

      <ComponentShowcase
        title="Text Buttons"
        description="Low-emphasis buttons for tertiary actions"
        code={`<button class="btn btn-text">Text Button</button>
<button class="btn btn-text btn-primary">Text Primary</button>
<button class="btn btn-text btn-secondary">Text Secondary</button>`}
      />

      <ComponentShowcase
        title="Tonal Buttons"
        description="Subtle buttons using container colors"
        code={`<button class="btn btn-tonal">Tonal</button>
<button class="btn btn-tonal btn-primary">Tonal Primary</button>
<button class="btn btn-tonal btn-secondary">Tonal Secondary</button>`}
      />
    </section>

    <section class="showcase-section">
      <h2>Semantic Colors</h2>
      <ComponentShowcase
        title="Semantic Button Variants"
        description="Buttons with semantic colors for feedback and status"
        code={`<button class="btn btn-success">Success</button>
<button class="btn btn-error">Error</button>
<button class="btn btn-warning">Warning</button>
<button class="btn btn-info">Info</button>`}
      />

      <ComponentShowcase
        title="Semantic Outlined"
        description="Outlined variants with semantic colors"
        code={`<button class="btn btn-outlined btn-success">Success</button>
<button class="btn btn-outlined btn-error">Error</button>
<button class="btn btn-outlined btn-warning">Warning</button>
<button class="btn btn-outlined btn-info">Info</button>`}
      />
    </section>

    <section class="showcase-section">
      <h2>Sizes</h2>
      <ComponentShowcase
        title="Button Sizes"
        description="Small, medium (default), and large button sizes"
        code={`<button class="btn btn-primary btn-sm">Small</button>
<button class="btn btn-primary btn-md">Medium</button>
<button class="btn btn-primary btn-lg">Large</button>`}
      />
    </section>

    <section class="showcase-section">
      <h2>Icon Buttons</h2>
      <ComponentShowcase
        title="Buttons with Icons"
        description="Combine icons with text for enhanced clarity"
        code={`<button class="btn btn-primary">
  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
  </svg>
  Add Item
</button>
<button class="btn btn-outlined">
  Download
  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
  </svg>
</button>`}
      />

      <ComponentShowcase
        title="Icon-Only Buttons"
        description="Compact icon buttons for toolbars and tight spaces"
        code={`<button class="btn btn-icon btn-primary">
  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
  </svg>
</button>
<button class="btn btn-icon btn-outlined">
  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
  </svg>
</button>
<button class="btn btn-icon btn-tonal">
  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
  </svg>
</button>`}
      />
    </section>

    <section class="showcase-section">
      <h2>States</h2>
      <ComponentShowcase
        title="Disabled State"
        description="Disabled buttons are non-interactive"
        code={`<button class="btn btn-primary" disabled>Disabled</button>
<button class="btn btn-outlined" disabled>Disabled Outlined</button>
<button class="btn btn-text" disabled>Disabled Text</button>`}
      />
    </section>

    <section class="showcase-section">
      <h2>Button Groups</h2>
      <ComponentShowcase
        title="Action Hierarchy"
        description="Group related buttons with proper visual hierarchy"
        code={`<div class="flex gap-2">
  <button class="btn btn-text">Cancel</button>
  <button class="btn btn-outlined">Save Draft</button>
  <button class="btn btn-primary">Publish</button>
</div>`}
      />
    </section>

    <div class="docs-link">
      <a href={`${base}docs/en/components/button/`} class="btn btn-outlined">
        View Full Documentation â†’
      </a>
    </div>
  </div>
</DocsLayout>

<style>
  .showcase-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .page-header {
    margin-bottom: 3rem;
    text-align: center;
  }

  .page-header h1 {
    margin-top: 0;
    font-size: 2.5rem;
    font-weight: 700;
    color: hsl(var(--color-on-surface));
  }

  .page-description {
    font-size: 1.125rem;
    color: hsl(var(--color-on-surface-variant));
    max-width: 700px;
    margin: 1rem auto 0;
    line-height: 1.6;
  }

  .showcase-section {
    margin: 3rem 0;
  }

  .showcase-section h2 {
    font-size: 1.875rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: hsl(var(--color-on-surface));
    padding-bottom: 0.5rem;
    border-bottom: 2px solid hsl(var(--color-primary) / 0.2);
  }

  .docs-link {
    margin-top: 4rem;
    text-align: center;
    padding: 2rem;
    border-top: 1px solid hsl(var(--color-outline-variant));
  }
</style>
