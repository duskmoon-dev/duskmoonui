---
import DocsLayout from '../../layouts/DocsLayout.astro';

const components = [
  { name: 'Button', description: 'Versatile buttons with multiple variants', href: '/components/button/' },
  { name: 'Card', description: 'Container for content with various styles', href: '/components/card/' },
  { name: 'Input', description: 'Form inputs with validation states', href: '/components/input/' },
  { name: 'Badge', description: 'Small status and label indicators', href: '/components/badge/' },
  { name: 'Alert', description: 'Contextual feedback messages', href: '/components/alert/' },
  { name: 'Modal', description: 'Dialog overlays for focused content', href: '/components/modal/' },
];
---

<DocsLayout
  title="Components"
  description="Browse all available DuskMoonUI components"
>
  <div class="components-page">
    <header class="page-header">
      <h1>Components</h1>
      <p class="page-description">
        Explore our collection of accessible, customizable components built with Tailwind CSS.
      </p>
    </header>

    <div class="components-grid">
      {components.map(component => (
        <a href={component.href} class="component-card">
          <h2>{component.name}</h2>
          <p>{component.description}</p>
          <span class="card-arrow">â†’</span>
        </a>
      ))}
    </div>
  </div>
</DocsLayout>

<style>
  .components-page {
    max-width: 1200px;
    margin: 0 auto;
  }

  .page-header {
    margin-bottom: 3rem;
    text-align: center;
  }

  .page-header h1 {
    margin-top: 0;
    font-size: 3rem;
    font-weight: 700;
  }

  .page-description {
    font-size: 1.25rem;
    color: var(--foreground-muted);
    max-width: 600px;
    margin: 0 auto;
  }

  .components-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .component-card {
    background: var(--surface);
    border: 2px solid var(--border);
    border-radius: 1rem;
    padding: 2rem;
    transition: all 0.3s;
    text-decoration: none;
    color: var(--foreground);
    position: relative;
    display: flex;
    flex-direction: column;
  }

  .component-card:hover {
    border-color: var(--primary);
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    text-decoration: none;
  }

  .component-card h2 {
    margin: 0 0 0.5rem 0;
    font-size: 1.5rem;
    color: var(--foreground);
  }

  .component-card p {
    margin: 0;
    color: var(--foreground-muted);
    line-height: 1.6;
    flex: 1;
  }

  .card-arrow {
    font-size: 1.5rem;
    color: var(--primary);
    margin-top: 1rem;
    display: inline-block;
    transition: transform 0.3s;
  }

  .component-card:hover .card-arrow {
    transform: translateX(4px);
  }
</style>
