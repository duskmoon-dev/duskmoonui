{
  "name": "@duskmoon-dev/core",
  "version": "1.0.0",
  "description": "DuskMoonUI - Tailwind CSS v4 plugin with Material Design 3 color system and component styles",
  "type": "module",
  "main": "./dist/index.css",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "default": "./dist/index.css",
      "style": "./dist/index.css",
      "types": "./dist/types/index.d.ts"
    },
    "./themes/sunshine": {
      "style": "./dist/themes/sunshine.css"
    },
    "./themes/moonlight": {
      "style": "./dist/themes/moonlight.css"
    },
    "./components": {
      "style": "./dist/components/index.css"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun run build --watch",
    "build": "bun run clean && bun run build:css && bun run build:types",
    "build:css": "bun run scripts/build-css.ts",
    "build:types": "tsc --emitDeclarationOnly --outDir dist/types",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "bun test tests/unit",
    "test:unit": "bun test tests/unit",
    "test:visual": "playwright test --config=playwright.visual.config.ts",
    "test:integration": "playwright test --config=playwright.integration.config.ts",
    "test:a11y": "playwright test --config=playwright.integration.config.ts tests/accessibility/",
    "test:all": "bun run test:unit && bun run test:visual && bun run test:integration && bun run test:a11y"
  },
  "keywords": [
    "tailwind",
    "tailwindcss",
    "tailwind-plugin",
    "component-library",
    "ui-library",
    "design-system",
    "tertiary-colors",
    "material-design-3",
    "css-framework",
    "color-system",
    "theming",
    "dark-mode"
  ],
  "author": "DuskMoon Development",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/duskmoon-dev/duskmoonui.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/duskmoon-dev/duskmoonui#readme",
  "bugs": {
    "url": "https://github.com/duskmoon-dev/duskmoonui/issues"
  },
  "peerDependencies": {
    "tailwindcss": "^4.0.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.0",
    "@playwright/test": "^1.40.0",
    "@types/bun": "latest",
    "axe-core": "^4.8.0",
    "lightningcss": "^1.22.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.6.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
